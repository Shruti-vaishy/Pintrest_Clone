<%- include('partials/header.ejs') %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5">
 <h1 class="text-xl"> Create a new post. </h1>
 <hr class="opacity-10 mt-3">
 <form action="/createpost" method="post" enctype="multipart/form-data">
    <input class=" block w-1/3 px-3 py-2"type="file" name="postimage">
    <input class=" text-black block w-1/3 px-3 py-2 rounded-md border-2" type="text" placeholder="title" name="title" >
    <textarea class=" h-60 block w-1/3 px-3 py-2 rounded-md border-2 text-black" type="text" placeholder="description" name="description"></textarea>
    <input class=" text-black block w-1/3 px-3 py-2 rounded-md bg-red-700" type="submit" value="Create post">
 </form>
</div>


